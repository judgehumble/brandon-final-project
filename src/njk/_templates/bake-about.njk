{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}Queen | {{ name }}{% endblock %}

{% block page_description %} Meet the Band |{{ name }}{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-sm-4">
          <img src="../img/queen/members/{{ imagebw }}" alt="" class="img-fluid mb-4">
          <p class="byline"><strong>Years active:</strong> {{tenure}} </p>
          <p class="byline"><strong>Instruments:</strong> {{instruments}} </p>
      </div>
      <div class="col-sm-8">
          <h1>{{ name }}</h1>
          <h6><strong>Born:</strong> {{birthdate}}</h6>
          <h5>{{birthplace}}</h5>
          <p>{{ description | safe }}</p>
      </div>
    </div>
  </article>
{% endblock %}